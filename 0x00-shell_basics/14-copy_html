#!/bin/bash

# Set the source directory (current working directory)
src_dir=$(pwd)

# Set the destination directory (parent directory)
dest_dir="$(dirname "$src_dir")"

# Copy HTML files from the source to the destination if they are newer or don't exist
for html_file in "$src_dir"/*.html; do
    base_file="$(basename "$html_file")"
    if [ ! -e "$dest_dir/$base_file" ] || [ "$html_file" -nt "$dest_dir/$base_file" ]; then
        cp "$html_file" "$dest_dir"
        echo "Copied $base_file to $dest_dir"
    fi
done
